# AIFEED Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Claude API key for AI content analysis
ANTHROPIC_API_KEY=your_claude_api_key_here

# Optional: News API key for news aggregation
NEWS_API_KEY=your_news_api_key_here

# Optional: YouTube API key for video content
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: GitHub API token for repository tracking
GITHUB_TOKEN=your_github_token_here

# Optional: Twitter/X API credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# Database configuration
DATABASE_PATH=./data/aifeed.db

# Application settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Update check settings
ENABLE_AUTO_UPDATE=true
UPDATE_CHECK_INTERVAL=86400000